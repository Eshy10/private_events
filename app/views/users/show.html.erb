<div class = "container">
<div class = 'row'>
<div class = 'col-4'>
<% @user.created_events.each do |event| %>
<h1>Events created by host: <%= event.creator.name %></h1>
<p>Date: <%= event.date %></p>
<p>Title: <%= event.title %></p>
<p>Description: <%= event.description %></p>
<p>Location: <%= event.location %></p>
<% end %>
</div>
<div class = 'col-4'>
<h1>Upcoming events</h1>
<% @upcoming_events.each do |event| %>
<h1>Events created by host: <%= event.creator.name %></h1>
<p>Date: <%= event.date %></p>
<p>Title: <%= event.title %></p>
<p>Location: <%= event.location %></p>
<% end %>
</div>
<div class = 'col-4'>
<h1>Past Events</h1>
<% @previous_events.each do |event| %>
<h1>Events created by host: <%= event.creator.name %></h1>
<p>Date: <%= event.date %></p>
<p>Title: <%= event.title %></p>
<p>Location: <%= event.location %></p>
<% end %>
</div>
</div>
</div>