<div class="container">
<h1>Log in</h1>
<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>
<%= f.submit "Log in", class: "btn btn-primary mt-3" %>
<% end %>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>

